
  <section class="container py-5 mt-5 mb-md-3 mb-lg-4 mb-xxl-5">
    <!-- Page title-->
    <h1 class="cardHeading packages text-center">Health Programmes</h1> 
    <!-- Services grid-->
       
            <div class="cardContainer">
              <% @packages.each do |package| %>
                    <div class="newpackagecard" style="width: 18rem;">
                    <% if package.package_image.attached? %>
                      <%= image_tag(rails_public_blob_url(package.package_image),  class: "card-img-top", alt: "Card image" )%>
                    <% else %>
                      <%= image_tag(dev_images('flowers.jpg'), class: "card-img-top", alt: "Card image" )%>
                    <% end %>
                    <div class="card-body">
                      <h5 class="card-title"><%= package.name %></h5>
                      <p class="card-text"><%= package.short_description %></p>
                      <p class="card-text"><%= "Rs. #{package.cost}" %></p>
                      <p class="card-text"><%= "#{package.duration} days" %></p>                  
                      <%= link_to "Details", package_path(package), id: "NewPackageCardButton", class: "navbarBookButton btn btn-outline-primary rounded-pill" %>
                    </div>
                  </div>        
                
              <% end %>
            </div>
        
          
        
        
       
      
     
    
</section>






