
  <section class="container py-5 mt-5 mb-md-3 mb-lg-4 mb-xxl-5">
    <!-- Page title-->
    <h1 class="cardHeading packages text-center">Health Programmes</h1>
    <!-- Services grid-->
    <div class="packageindexcontainer">
      <div class="row row-cols-1 row-cols-sm-2 row-cols-lg-3 g-3 pb-sm-3 pb-md-4 pb-xl-5 ">
        <% @packages.each do |package| %>
          <div class="col">
            <%= link_to package_path(package) do %>
              <div class="packageIndex">
                <div class="card-info">
                  <h3 id="cardTitle" class="h4 card-title mt-0"><%= package.name %></h3>
                  <h6 id="card-short"><%= package.short_description %></h6>
                </div>
                <div id="roundButton">
                  <i class="bi bi-arrow-right"></i>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
</section>




