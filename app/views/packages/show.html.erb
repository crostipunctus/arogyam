  <div class="container pt-5 pb-sm-3 mt-5 mb-2 mb-md-3 mb-lg-4 mb-xxl-5">
   <%= link_to "<i class='bi bi-arrow-left-circle'></i>".html_safe, :back, id:"back_to", data: {turbo: false} %>
    <h1 id="packageName" class="text-center"><%= @package.name %></h1>
    <div id="packageTagline"><%= @package.short_description %></div>
    
    <div class="durationCostContainer">
      <div class="packageDuration"><%= "#{@package.duration} days"%></div>
      <div class="packageCost"><%= "Rs. #{@package.cost}" %></div>
      <% if @package.name == 'VishraaM'%>
        <%= link_to "Book programme", "https://forms.gle/VvsjTyC9RSGF33EQ8", class: "bookProgButton btn btn-outline-primary rounded-pill", target: "_blank" %>
      <% else %>
        <div class="package-titles"><strong>Please register for a batch to avail this programme: <%= link_to "Batches", batches_path, class: "bookProgButton btn btn-outline-primary rounded-pill" %></strong></div>
      <% end %>
    </div>
    <div id="package-image" class="package-image">
          <%= package_image(@package) %>
        </div> 
      <div class="packageShow">
        <div class="packageText">
          <% if @package.dates.present? %>
              <h3 class="dates mb-lg-4"><%= "Dates: #{@package.dates}" %></h3>
          <% end %>
          <div id="package" class="package mb-0 mb-md-1 mb-lg-3"><%= @package.content%></div><br>
          <div class="package-titles"><strong>Benefits:</strong></div>
          <span id="package" class="mb-0 mb-md-1 mb-lg-3"><%= @package.benefits%></span><br>
          <div class="package-titles"><strong>Eligibility:</strong></div>
          <span id="package" class="mb-0 mb-md-1 mb-lg-3"><%= @package.eligibility%></span><br>
          <div class="package-titles"><strong>Note:</strong></div>
          <span id="package" class="mb-0 mb-md-1 mb-lg-3"><%= @package.note%></span>
          <% if current_user_admin? %>
            <div class="admin">
              <%= link_to "Edit package", edit_package_path(@package), class: "btn btn-primary btn-sm" %>
            </div>
            <div  class="admin">
              <%= link_to "Delete package", destroy_package_path(@package), class: "btn btn-danger btn-sm", data: {turbo_method: :delete, turbo_confirm: "Are you sure?" }%>
            </div>
          <% end %>
        
        </div>
      </div>
  </div>
    
    


