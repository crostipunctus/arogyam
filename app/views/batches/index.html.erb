  <section class="container py-5 mt-5 mb-md-3 mb-lg-4 mb-xxl-5">

  batches
  <% @batches.each do |batch|%>
    
    <% if current_user_admin? %>
      <li><%= link_to batch.name, batch_path(batch) %></li>
    <% else %>
      <li><%= batch.name %></li>
    <% end %>
    <li><%= batch.start_date %></li>
    <li><%= batch.end_date %></li>
    
    <%= button_to "Register", registrations_path(batch_id: batch.id), class: "mt-5 btn btn-outline-primary rounded-pill", turbo_method: :post, data: {turbo: false}  %>
    
  <% end %>

  



</section>