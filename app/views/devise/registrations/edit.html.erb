<section class="container py-5 mt-5 mb-md-3 mb-lg-4 mb-xxl-5">
<h2>Edit <%= resource_name.to_s.humanize %></h2>
<div data-turbo="false" class="h-100 d-flex align-items-center justify-content-center">
  <div class="col-12 col-sm-10 col-md-8 col-lg-6">
  <%= form_for(resource, as: resource_name, url: user_registration_path, html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group mb-3">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="form-group mb-3">
      <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
      <%= f.password_field :password, autocomplete: "new-password",  class: "form-control" %>
      <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </div>

    <div class="form-group mb-3">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password",  class: "form-control" %>
    </div>

    <div class="form-group mb-3">
      <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
      <%= f.password_field :current_password, autocomplete: "current-password",  class: "form-control" %>
    </div>

    <div class="actions">
      <%= f.submit "Update", class: "btn btn-outline-success" %>
    </div>
  <% end %>
  <h3>Cancel my account</h3>

<h4>Unhappy? <%= button_to "Cancel my account", user_registration_path, data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-outline-danger" %></h4>

  <%= link_to "Back", :back, class: "btn btn-primary" %>
  </div>



</div>
</section>