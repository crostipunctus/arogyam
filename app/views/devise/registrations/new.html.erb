


 <main class="page-wrapper">
 <br>
  <div class="d-flex flex-column position-relative h-100 pt-5">

    <div class="container mt-auto">
      <div class="row align-items-center">
        <div class="col-md-6 mb-5 mb-md-0">
          <div id="signinCard" class=" border-0 bg-success py-md-3 py-lg-4 px-lg-4 px-xl-5">
            <div >

              <h1 class="py-2 pb-lg-3">Sign Up</h1>
             
              <%= form_for(resource, as: resource_name, url: user_registration_path) do |f| %>
              <%= render "shared/errors", object: resource %>
                <div class="pb-3 mb-3">
                  <div class="position-relative">
                  
                  <%= f.label :email %><br />
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-lg ps-5" %>
                </div>

                <div class="field">
                  <%= f.label :first_name %><br />
                  <%= f.text_field :first_name, class: "form-control form-control-lg ps-5" %>
                </div>

                <div class="field">
                  <%= f.label :last_name %><br />
                  <%= f.text_field :last_name, class: "form-control form-control-lg ps-5" %>
                </div>

                <div class="field">
                  <%= f.label :password %><br />
                   <% if @minimum_password_length %>
                    <em>(<%= @minimum_password_length %> characters minimum)</em>
                    <% end %><br />
                  <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-control-lg ps-5" %>
                </div>

                 <div class="field">
                  <%= f.label :password_confirmation %><br />
                  <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-lg ps-5" %>
                </div>

               <br>

                <div class="actions">
                  <%= f.submit "Sign up", class: "btn btn-lg btn-light w-100 mb-4" %>
                </div>
              <% end %>
              

              <%= render "devise/shared/links" %>
            </div>
            
          </div>
        </div>
      </div>
    </div>
    <br>
    <br>

  </div>
</main>
