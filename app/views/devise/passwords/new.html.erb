<section class="container py-5 mt-5 mb-md-3 mb-lg-4 mb-xxl-5">
<h2 class="text-center">Forgot your password?</h2>
<div class="d-flex justify-content-center">
  
  <div class="gradient-form">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "signin-form" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-lg ps-5" %>
      </div>

      <div class="actions">
        <%= f.submit "Send me reset password instructions", class: "btn btn-lg btn-light w-100 mb-4" %>
      </div>
    <% end %>


  <%= render "devise/shared/links" %>
  </div>
</div>
</section>
